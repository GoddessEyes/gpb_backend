[pre-commit-hook]
command=pylint
limit=8.0

[MASTER]

ignore=
    migrations,
    dev.py,
    base.py,
    prod.py,
    validators.py,
    common,
    models.py

persistent=no

[MESSAGES CONTROL]

enable=all

disable=
    I,
    missing-docstring,
    no-self-use,
    abstract-method,
    duplicate-code,
    arguments-differ,
    import-error,
    invalid-name,
    no-init,
    no-member,
    no-value-for-parameter,
    old-style-class,
    redefined-variable-type,
    super-init-not-called,
    too-few-public-methods,
    too-many-arguments,
    too-many-boolean-expressions,
    too-many-branches,
    too-many-format-args,
    too-many-function-args,
    too-many-instance-attributes,
    too-many-lines,
    too-many-locals,
    too-many-public-methods,
    too-many-statements,
    unused-argument,
    unused-wildcard-import,
    wildcard-import,
    line-too-long,
    no-name-in-module,
    bad-continuation,
    import-outside-toplevel,
		logging-format-interpolation,

[REPORTS]

output-format=parseable

files-output=no

reports=no

evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)

[TYPECHECK]

ignore-mixin-members=yes

ignored-classes=SQLObject

generated-members=REQUEST,acl_users,aq_parent,objects,DoesNotExist,id,pk,_meta,"[a-zA-Z]+_set{1,2}",save,delete


[BASIC]


bad-functions=map,filter,apply,input

module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$

const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

class-rgx=[A-Z_][a-zA-Z0-9]+$

function-rgx=[a-z_][a-z0-9_]{2,30}$

method-rgx=[a-z_][a-z0-9_]{2,30}$

attr-rgx=[a-z_][a-z0-9_]{2,30}$

argument-rgx=[a-z_][a-z0-9_]{2,30}$

variable-rgx=[a-z_][a-z0-9_]{2,30}$

inlinevar-rgx=[A-Za-z_][A-Za-z0-9_]*$

good-names=i,j,k,ex,Run,_,pk,setUp, tearDown

bad-names=foo,baz,toto,tutu,tata

no-docstring-rgx=((__.*__)|Meta|def run)


[MISCELLANEOUS]

notes=FIXME,XXX


[SIMILARITIES]

min-similarity-lines=4

ignore-comments=yes

ignore-docstrings=yes


[VARIABLES]

init-import=no

dummy-variables-rgx=_|dummy

additional-builtins=


[FORMAT]

max-line-length=120

max-module-lines=1000

indent-string='    '


[DESIGN]

max-args=5

ignored-argument-names=_.*

max-locals=15

max-returns=6

max-branchs=12

max-statements=50

max-parents=15

max-attributes=7

min-public-methods=2

max-public-methods=20


[IMPORTS]

deprecated-modules=regsub,TERMIOS,Bastion,rexec

import-graph=

ext-import-graph=

int-import-graph=


[CLASSES]

defining-attr-methods=
    __init__,
    __new__,
    setUp,
    init,